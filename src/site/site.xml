<?xml version="1.0" encoding="UTF-8"?>
<project name="contentcheck-maven-plugin" xmlns="http://maven.apache.org/DECORATION/1.3.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd">
    <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>1.3.0</version>
    </skin>
    <custom>
        <fluidoSkin>
            <topBarEnabled>true</topBarEnabled>
            <topBarIcon>
                <name>Buildbox</name>
                <alt>Buildbox</alt>
                <src>http://buildbox.sourceforge.net/logo-wide.png</src>
                <href>/index.html</href>
            </topBarIcon>
            <sideBarEnabled>true</sideBarEnabled>
            <gitHub>
                <projectId>buildbox/contentcheck-maven-plugin</projectId>
                <ribbonOrientation>right</ribbonOrientation>
                <ribbonColor>green</ribbonColor>
            </gitHub>
            <leftColumnClass>span3</leftColumnClass>
            <bodyColumnClass>span9</bodyColumnClass>
            <sourceLineNumbersEnabled>true</sourceLineNumbersEnabled>
        </fluidoSkin>
    </custom>
    <publishDate position="right"/>
    <version position="right"/>

    <body>
        <breadcrumbs>
            <item name="Buildbox" href="http://github.com/buildbox"/>
            <item name="ContentCheck Maven Plugin"
                  href="http://buildbox.github.com/contentcheck-maven-plugin/index.html"/>
        </breadcrumbs>

        <menu name="Documentation">
            <item name="Overview" href="index.html"/>
            <item name="Goals" href="plugin-info.html"/>
            <item name="Usage" href="usage.html"/>
            <item name="Configuration" href="configuration.html">
                <item name="Ignore your own artifacts" href="own-artifacts.html"/>
                <item name="Content definition file structure" href="content-def.html"/>
                <item name="Additional license info" href="additional-lic-info.html"/>
            </item>
        </menu>
        <menu name="Links">
            <item name="Apache" href="http://www.apache.org/"/>
            <item name="Maven 2" href="http://maven.apache.org/"/>
            <item name="Google groups" href="http://groups.google.com/group/buildbox"/>
        </menu>
        <menu name="Reports" ref="reports"/>
    </body>
    
</project>
